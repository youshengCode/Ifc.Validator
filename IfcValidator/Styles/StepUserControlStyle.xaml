<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convertors="using:IfcValidator.Helpers">

    <convertors:BoolToVisible x:Key="BoolToVisible" />
    <convertors:BoolToColorConverter x:Key="BoolToColorConverter" />
    <convertors:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />

    <Style x:Key="StepIconBorder" TargetType="Border">
        <Setter Property="Width" Value="22" />
        <Setter Property="Height" Value="22" />
        <Setter Property="CornerRadius" Value="11" />
    </Style>

    <Style x:Key="StepIconText" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,-2,0,0" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="StepHeader" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="10" />
    </Style>

</ResourceDictionary>

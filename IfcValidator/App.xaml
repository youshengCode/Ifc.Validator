<cm:CaliburnApplication
    x:Class="IfcValidator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="using:Caliburn.Micro"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/_Colors.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/_FontSizes.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/_Thickness.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/_Themes.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Page.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</cm:CaliburnApplication>

